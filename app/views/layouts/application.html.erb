<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">


    <meta name="description" content= "<%= @page_description %>">
    <title><%= @page_title  %> | Associate Painting</title>

      <%= csrf_meta_tags %>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <% unless current_page?(project_gallery_path) or current_page?(gallery_path) %> <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> <% end %>
      <%= render 'layouts/shim' %>

  </head>

	<body class=" <%= controller_name %> <%= action_name %>">
    <%= render 'layouts/header' %>
      <div class="main-wrap">
  			<% flash.each do |message_type, message| %>
          <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
        <% end %>

      	<%= yield %>
      </div>
    <%= render 'layouts/footer' %>
    <% if current_page?(project_gallery_path) or current_page?(gallery_path) %> <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> <% end %>
  </body>
</html>

